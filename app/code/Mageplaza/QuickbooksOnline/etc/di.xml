<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="mpquickbooks_sync_listing_data_source" xsi:type="string">Mageplaza\QuickbooksOnline\Model\ResourceModel\Sync\Grid\Collection</item>
                <item name="mpquickbooks_queue_listing_data_source" xsi:type="string">MpQuickbooksQueueGridCollection</item>
            </argument>
        </arguments>
    </type>
    <type name="Mageplaza\QuickbooksOnline\Model\ResourceModel\Sync\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">mageplaza_quickbooks_sync</argument>
            <argument name="resourceModel" xsi:type="string">Mageplaza\QuickbooksOnline\Model\ResourceModel\Sync</argument>
        </arguments>
    </type>
    <virtualType name="MpQuickbooksQueueGridCollection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">mageplaza_quickbooks_queue</argument>
            <argument name="resourceModel" xsi:type="string">Mageplaza\QuickbooksOnline\Model\ResourceModel\Queue</argument>
        </arguments>
    </virtualType>
    <type name="Mageplaza\QuickbooksOnline\Model\MagentoObjectFactory">
        <arguments>
            <argument name="map" xsi:type="array">
                <item name="product" xsi:type="string">Magento\Catalog\Model\Product</item>
                <item name="customer" xsi:type="string">Magento\Customer\Model\Customer</item>
                <item name="tax" xsi:type="string">Mageplaza\QuickbooksOnline\Model\TaxRate</item>
                <item name="order" xsi:type="string">Magento\Sales\Model\Order</item>
                <item name="invoice" xsi:type="string">Magento\Sales\Model\Order\Invoice</item>
                <item name="creditMemo" xsi:type="string">Magento\Sales\Model\Order\Creditmemo</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Eav\Model\Entity\AbstractEntity">
        <plugin name="mpquickbooks_add_attribute" type="Mageplaza\QuickbooksOnline\Plugin\QuickbooksDefaultAttributes" />
    </type>
    <type name="Magento\Tax\Model\Calculation\Rate">
        <plugin name="mpquickbooks_save_tax_rate" type="Mageplaza\QuickbooksOnline\Plugin\Tax\Model\Calculation\Rate" sortOrder="99999"/>
    </type>
</config>
