<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/guest-carts/:cartId/mpbarclaycard-get-hosted-url" method="POST">
        <service class="Mageplaza\Barclaycard\Api\GuestPaymentInterface" method="getHostedUrl"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/carts/mine/mpbarclaycard-get-hosted-url" method="POST">
        <service class="Mageplaza\Barclaycard\Api\PaymentInterface" method="getHostedUrl"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/guest-carts/:cartId/mpbarclaycard-process-3ds" method="POST">
        <service class="Mageplaza\Barclaycard\Api\GuestPaymentInterface" method="process3DS"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/carts/mine/mpbarclaycard-process-3ds" method="POST">
        <service class="Mageplaza\Barclaycard\Api\PaymentInterface" method="process3DS"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
