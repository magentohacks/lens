/** @var \Mageplaza\RewardPointsPro\Block\ProductEarning $block */

if ($block->getPointEarn()): ?>
    <div class="catalog-points mp-reward-points mp-product">
        <?php $block->getIconHtml() ?>
        <?php
        $pointEarn = '<strong>' . $block->getPointEarn() . '</strong>';
        $product   = $block->getCurrentProduct();
        $label     = in_array($product->getTypeId(), ['grouped', 'bundle']) ? $label = __('Earning from %1 for this item', $pointEarn) : __('Earning %1 for this item', $pointEarn);
        ?>
        <span class="points mp-point-label"><?php echo $label ?></span>
        <div class="clr"></div>
        <?php if (!$block->isCustomerLogin()): ?>
            <div class="register" style="font-size: 12px;">
                <span><?php echo __('Applies only to registered customers, may vary when logged in.') ?></span>
            </div>
        <?php endif; ?>
    </div>
<?php endif; ?>