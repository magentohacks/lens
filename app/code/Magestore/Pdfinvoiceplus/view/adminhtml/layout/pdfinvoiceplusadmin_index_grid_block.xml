<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="pdfinvoiceplus.template.grid.container">
            <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Grid" name="pdfinvoiceplus.pdftemplate.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">pdfinvoiceplusadmin_template_grid</argument>
                    <argument name="dataSource" xsi:type="object">Magestore\Pdfinvoiceplus\Model\ResourceModel\PdfTemplate\Collection</argument>
                    <argument name="use_ajax" xsi:type="string">true</argument>
                    <argument name="default_sort" xsi:type="string">template_id</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    <argument name="grid_url" xsi:type="url" path="*/*/grid">
                        <param name="_current">1</param>
                    </argument>
                </arguments>
                <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="pdfinvoiceplus.pdftemplate.grid.massaction"
                       as="grid.massaction">
                    <arguments>
                        <argument name="massaction_id_field" xsi:type="string">template_id</argument>
                        <argument name="form_field_name" xsi:type="string">pdftemplate</argument>
                        <argument name="use_select_all" xsi:type="string">0</argument>
                        <argument name="options" xsi:type="array">
                            <item name="enable" xsi:type="array">
                                <item name="label" xsi:type="string" translate="true">Active</item>
                                <item name="url" xsi:type="string">pdfinvoiceplusadmin/index/massEnable</item>
                            </item>
                            <item name="disable" xsi:type="array">
                                <item name="label" xsi:type="string" translate="true">Inactive</item>
                                <item name="url" xsi:type="string">pdfinvoiceplusadmin/index/massDisable</item>
                            </item>
                            <item name="delete" xsi:type="array">
                                <item name="label" xsi:type="string" translate="true">Delete</item>
                                <item name="url" xsi:type="string">pdfinvoiceplusadmin/index/massDelete</item>
                                <item name="confirm" xsi:type="string" translate="true">Are you sure?</item>
                            </item>
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Widget\Grid\Export" name="pdfinvoiceplus.pdftemplate.grid.export"
                       as="grid.export">
                    <arguments>
                        <argument name="exportTypes" xsi:type="array">
                            <item name="csv" xsi:type="array">
                                <item name="urlPath" xsi:type="string">pdfinvoiceplusadmin/*/exportCsv</item>
                                <item name="label" xsi:type="string" translate="true">CSV</item>
                            </item>
                            <item name="excel" xsi:type="array">
                                <item name="urlPath" xsi:type="string">pdfinvoiceplusadmin/*/exportExcel</item>
                                <item name="label" xsi:type="string" translate="true">Excel XML</item>
                            </item>
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet"
                       name="pdfinvoiceplus.pdftemplate.grid.columnSet">
                    <arguments>
                        <argument name="id" xsi:type="string">pdfinvoiceplusadmin_template_grid</argument>
                        <argument name="rowUrl" xsi:type="array">
                            <item name="path" xsi:type="string">pdfinvoiceplusadmin/index/edit</item>
                            <item name="extraParamsTemplate" xsi:type="array">
                                <item name="template_id" xsi:type="string">getId</item>
                            </item>
                        </argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="template_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Template ID</argument>
                            <argument name="type" xsi:type="string">number</argument>
                            <argument name="index" xsi:type="string">template_id</argument>
                            <argument name="id" xsi:type="string">template_id</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="template_name">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Template Name</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">template_name</argument>
                            <argument name="id" xsi:type="string">template_name</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column\Multistore" as="stores">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Stores</argument>
                            <argument name="type" xsi:type="string">store</argument>
                            <argument name="index" xsi:type="string">stores</argument>
                            <argument name="id" xsi:type="string">stores</argument>
                            <argument name="store_all" xsi:type="string">1</argument>
                            <argument name="store_view" xsi:type="string">1</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="renderer" xsi:type="string">Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Grid\Store</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="status">
                        <arguments>
                            <argument name="id" xsi:type="string">status</argument>
                            <argument name="header" xsi:type="string" translate="true">Status</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="index" xsi:type="string">status</argument>
                            <argument name="options" xsi:type="options"
                                      model="Magestore\Pdfinvoiceplus\Model\PdfTemplate\Option\Statuses"/>
                            <argument name="header_css_class" xsi:type="string">col-status</argument>
                            <argument name="column_css_class" xsi:type="string">col-status</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="action"
                           acl="Magento_Pdfinvoiceplus::template_edit">
                        <arguments>
                            <argument name="id" xsi:type="string">action</argument>
                            <argument name="header" xsi:type="string" translate="true">Action</argument>
                            <argument name="type" xsi:type="string">action</argument>
                            <argument name="getter" xsi:type="string">getId</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="index" xsi:type="string">template_id</argument>
                            <argument name="is_system" xsi:type="string">1</argument>
                            <argument name="actions" xsi:type="array">
                                <item name="edit" xsi:type="array">
                                    <item name="caption" xsi:type="string" translate="true">Edit</item>
                                    <item name="url" xsi:type="array">
                                        <item name="base" xsi:type="string">pdfinvoiceplusadmin/index/edit</item>
                                    </item>
                                    <item name="field" xsi:type="string">template_id</item>
                                </item>
                            </argument>
                            <argument name="header_css_class" xsi:type="string">col-actions</argument>
                            <argument name="column_css_class" xsi:type="string">col-actions</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>

