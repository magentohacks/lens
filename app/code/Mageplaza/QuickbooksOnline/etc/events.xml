<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
<!--    ================================================ CUSTOMER ============================================-->
    <event name="customer_save_before">
        <observer name="mp_customer_model_save_before" instance="Mageplaza\QuickbooksOnline\Observer\Customer\CustomerSaveBefore"/>
    </event>
    <event name="customer_save_after">
        <observer name="mp_customer_model_save_after" instance="Mageplaza\QuickbooksOnline\Observer\Customer\CustomerSaveAfter"/>
    </event>
    <event name="customer_save_commit_after">
        <observer name="mp_quickbooks_customer_save_commit_after" instance="Mageplaza\QuickbooksOnline\Observer\Customer\CustomerSaveCommitAfter"/>
    </event>
    <event name="customer_delete_commit_after">
        <observer name="mp_quickbooks_customer_delete" instance="Mageplaza\QuickbooksOnline\Observer\Customer\CustomerCommitDelete"/>
    </event>
    <event name="customer_address_save_after">
        <observer name="mp_customer_address_model_save_after" instance="Mageplaza\QuickbooksOnline\Observer\Customer\CustomerSaveAddressAfter" />
    </event>
    <event name="customer_address_delete_after">
        <observer name="mp_customer_address_delete" instance="Mageplaza\QuickbooksOnline\Observer\Customer\CustomerDeleteAddress"/>
    </event>
    <!--    ========================================= PRODUCT ============================================-->
    <event name="catalog_product_save_before">
        <observer name="mp_catalog_product_model_save_before" instance="Mageplaza\QuickbooksOnline\Observer\Product\ProductSaveBefore"/>
    </event>
    <event name="catalog_product_save_after">
        <observer name="mp_quickbooks_product_save_after" instance="Mageplaza\QuickbooksOnline\Observer\Product\ProductSaveAfter"/>
    </event>
    <event name="catalog_product_save_commit_after">
        <observer name="mp_quickbooks_product_save_commit_after" instance="Mageplaza\QuickbooksOnline\Observer\Product\ProductSaveCommitAfter"/>
    </event>
    <event name="catalog_product_delete_commit_after">
        <observer name="mp_quickbooks_product_delete" instance="Mageplaza\QuickbooksOnline\Observer\Product\ProductCommitDelete"/>
    </event>
    <!--    ========================================= ORDER ============================================-->
    <event name="sales_order_save_before">
        <observer name="mp_sales_order_model_save_before" instance="Mageplaza\QuickbooksOnline\Observer\Order\OrderSaveBefore"/>
    </event>
    <event name="sales_order_save_after">
        <observer name="mp_quickbooks_order_save_after" instance="Mageplaza\QuickbooksOnline\Observer\Order\OrderSaveAfter"/>
    </event>
    <event name="sales_order_delete_before">
        <observer name="mp_quickbooks_order_delete_before" instance="Mageplaza\QuickbooksOnline\Observer\Order\OrderDeleteBefore"/>
    </event>
    <event name="sales_order_save_commit_after">
        <observer name="mp_quickbooks_order_save_commit_after" instance="Mageplaza\QuickbooksOnline\Observer\Order\OrderSaveCommitAfter"/>
    </event>
    <event name="sales_order_delete_commit_after">
        <observer name="mp_quickbooks_order_delete" instance="Mageplaza\QuickbooksOnline\Observer\Order\OrderCommitDelete"/>
    </event>
    <!--    ========================================= INVOICE ============================================-->
    <event name="sales_order_invoice_save_before">
        <observer name="mp_sales_order_invoice_model_save_before" instance="Mageplaza\QuickbooksOnline\Observer\Invoice\InvoiceSaveBefore"/>
    </event>
    <event name="sales_order_invoice_save_commit_after">
        <observer name="mp_quickbooks_invoice_save_commit_after" instance="Mageplaza\QuickbooksOnline\Observer\Invoice\InvoiceSaveCommitAfter"/>
    </event>
    <event name="sales_order_invoice_delete_commit_after">
        <observer name="mp_quickbooks_invoice_delete" instance="Mageplaza\QuickbooksOnline\Observer\Invoice\InvoiceCommitDelete"/>
    </event>
    <event name="sales_order_invoice_save_after">
        <observer name="mp_quickbooks_invoice_save_after" instance="Mageplaza\QuickbooksOnline\Observer\Invoice\InvoiceSaveAfter"/>
    </event>
    <!--    ========================================= CREDIT MEMO ============================================-->
    <event name="sales_order_creditmemo_save_before">
        <observer name="mp_sales_order_creditmemo_model_save_before" instance="Mageplaza\QuickbooksOnline\Observer\Creditmemo\CreditmemoSaveBefore"/>
    </event>
    <event name="sales_order_creditmemo_save_commit_after">
        <observer name="mp_quickbooks_creditmemo_save_commit_after" instance="Mageplaza\QuickbooksOnline\Observer\Creditmemo\CreditmemoSaveCommitAfter"/>
    </event>
    <event name="sales_order_creditmemo_delete_commit_after">
        <observer name="mp_quickbooks_creditmemo_delete" instance="Mageplaza\QuickbooksOnline\Observer\Creditmemo\CreditmemoCommitDelete"/>
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer name="mp_quickbooks_creditmemo_save_after" instance="Mageplaza\QuickbooksOnline\Observer\Creditmemo\CreditmemoSaveAfter"/>
    </event>
</config>
