<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magecheckout" translate="label" sortOrder="400">
            <label>magecheckout</label>
        </tab>
        <section id="zopimchat" translate="label" type="text" sortOrder="650" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Zopim Chat</label>
            <tab>magecheckout</tab>
            <resource>Magecheckout_ZopimChat::zopimchat</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="is_enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="embed_widget"
                       translate="label comment" type="textarea" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Embed the Zopim Chat Widget</label>
                    <comment>Copy widget script in https://dashboard.zopim.com/#widget/getting_started</comment>
                </field>
            </group>
        </section>
    </system>
</config>
