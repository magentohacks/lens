<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceContainer name="columns.top">
			<block class="Magento\Framework\View\Element\Template" name="product.category" template="Magento_Catalog::product/view/product_cat.phtml"/>
		</referenceContainer>
		<move element="page.main.title" as="page_main_title_custom" destination="product.info.customdetails"/>
		<move element="product.info.review" as="product_info_review" destination="product.info.customdetails"/>
		<move element="product.price.final" as="product_price_final" destination="product.info.customdetails"/>
		<move element="product.price.tier" as="product_price_tier" destination="product.info.customdetails"/>
		<move element="product.info.brand" as="product_info_brand" destination="product.info.customdetails" after="product.price.tier"/>
		<referenceBlock name="page.main.title" template="Magento_Catalog::product/view/title.phtml"/>
		<referenceBlock name="product.info.brand" template="Magento_Catalog::product/view/logo.phtml"/>
		<move element="alert.urls" as="alert_urls" destination="ves.product.info.main"/>
		<move element="product.info" as="product_info" destination="ves.product.info.main"/>
		<move element="product.info.overview" as="product_info_overview" destination="ves.product.info.main"/>
		<move element="require-cookie" as="require_cookie" destination="ves.product.info.main"/>
		<move element="product.info.extrahint" as="product_info_extrahint" destination="ves.product.info.main"/>
		<move element="product.info.type" as="product_info_type" destination="ves.product.info.main"/>

		<referenceBlock name="product.category" remove="true"/>
		<!--referenceBlock name="page.main.title" remove="true"/-->
		<referenceBlock name="product.info.sku" remove="true"/>
		<referenceBlock name="product.info.upsell" remove="true"/>
		
		<referenceContainer name="content.aside">
			
			<block class="Magento\Catalog\Block\Product\ProductList\Related" name="catalog.product.related" template="Magento_Catalog::product/list/items_carousel.phtml" >
				<arguments>
					<argument name="type" xsi:type="string">related</argument>
					<argument name="status" xsi:type="string">1</argument>
					<argument name="replace" xsi:type="string">1</argument>
				</arguments>
			</block>
		</referenceContainer>
		<referenceContainer name="product.info.media">
			<block class="Ves\Themesettings\Block\Product\View" name="product.info.customdetails" template="Magento_Catalog::product/view/product_customdetails.phtml" before="-">
			</block>
		</referenceContainer>
		<move element="product.info.details" as="product_info_details" destination="content.aside" />
		<move element="catalog.product.related" destination="content.aside" after="-"/>

		<referenceContainer name="product.info.main">
			<block class="Ves\Themesettings\Block\Product\View" name="ves.product.info.main" template="Magento_Catalog::product/view/product_info_main.phtml">
			</block>
			<!--block class="Magento\Reports\Block\Product\Widget\Viewed" page_size="4" name="recently_viewed" template="widget/viewed/content/viewed_grid.phtml" cacheable="false" /-->
			
<block class="Magento\Catalog\Block\Product\ProductList\Upsell" name="product.info.upsell" template="Magento_Catalog::product/list/related_right.phtml" after="ves.product.info.main">
				<arguments>
					<argument name="type" xsi:type="string">upsell</argument>
					<argument name="status" xsi:type="string">1</argument>
					<argument name="replace" xsi:type="string">1</argument>
				</arguments>
			</block>
		</referenceContainer>	
		
        <container name="product.info.extrahint" as="extrahint" label="Product View Extra Hint">
            <container name="product.info.social" label="Product social links container" after="product.info.overview">
                <block class="Magento\Catalog\Block\Product\View" name="product.info.addto" as="addto" template="product/view/addto.phtml"/>
                <block class="Magento\Catalog\Block\Product\View" name="product.info.mailto" template="product/view/mailto.phtml"/>
                <!--block class="Magento\Catalog\Block\Product\View" name="product.info.categories" template="product/view/categories.phtml"/-->
		
            </container>
		
        </container> 
	</body>
</page>
