/** @var Mageplaza\RewardPointsUltimate\Block\Socials\Facebook $block */
if ($block->isEnabled()): ?>
    <div class="mp-rw-social facebook-earning">
        <div id="fb-root"></div>
        <?php /* @escapeNotVerified */
        echo $this->helper('Mageplaza\RewardPointsUltimate\Helper\Data')->getFacebookScript(); ?>
        <div class="fb-like"
             data-href="<?php /* @escapeNotVerified */
             echo $block->getCurrentUrl() ?>"
             data-layout="<?php /* @escapeNotVerified */
             echo $block->isDisplayButtonCount() ? 'button_count' : 'button' ?>"
             data-action="like" data-show-faces="true" data-share="false">
        </div>
    </div>
    <script>
        window.oldFbAsyncInit = window.fbAsyncInit || function () {
        };
        window.fbAsyncInit = function () {
            var likeUrl = '<?php /* @escapeNotVerified */ echo $block->getUrl('customer/socials_facebook/like') ?>';
            var unlikeUrl = '<?php /* @escapeNotVerified */ echo $block->getUrl('customer/socials_facebook/unlike') ?>';
            FB.Event.subscribe('edge.create',
                function (response) {
                    mpSocials.sendAjax(likeUrl, response);
                }
            );
            FB.Event.subscribe('edge.remove',
                function (response) {
                    mpSocials.sendAjax(unlikeUrl, response);
                }
            );
        };
    </script>
<?php endif; ?>