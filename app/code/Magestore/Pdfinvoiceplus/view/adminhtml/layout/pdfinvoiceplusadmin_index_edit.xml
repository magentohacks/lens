<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>PDF Template</title>
        <css src="Magestore_Pdfinvoiceplus::css/zebra_tooltips.css" />
        <css src="Magestore_Pdfinvoiceplus::css/form/edit-template.css" />
        <css src="Magestore_Pdfinvoiceplus::css/form/tinybox.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit" name="pdfinvoiceplus_pdftemplate_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit\Tabs" name="pdftemplate_edit_tabs">
                <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit\Tab\GeneralTab" name="pdftemplate_edit_tab_general"/>
                <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit\Tab\OrderDesignTab" name="pdftemplate_edit_tab_orderdesign"/>
                <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit\Tab\InvoiceDesignTab" name="pdftemplate_edit_tab_invoicedesign"/>
                <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit\Tab\CreditMemoDesignTab" name="pdftemplate_edit_tab_ceditmemodesign"/>
                <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit\Tab\ShipmentDesignTab" name="pdftemplate_edit_tab_shipmentdesign"/>
                <block class="Magestore\Pdfinvoiceplus\Block\Adminhtml\PdfTemplate\Edit\Tab\QuoteDesignTab" name="pdftemplate_edit_tab_quotedesign"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general_section</argument>
                    <argument name="block" xsi:type="string">pdftemplate_edit_tab_general</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">defaultinfo_section</argument>
                    <argument name="block" xsi:type="string">pdftemplate_edit_tab_defaultinfo</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">orderdesign_section</argument>
                    <argument name="block" xsi:type="string">pdftemplate_edit_tab_orderdesign</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">invoicedesign_section</argument>
                    <argument name="block" xsi:type="string">pdftemplate_edit_tab_invoicedesign</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">ceditmemodesign_section</argument>
                    <argument name="block" xsi:type="string">pdftemplate_edit_tab_ceditmemodesign</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">shipmentdesign_section</argument>
                    <argument name="block" xsi:type="string">pdftemplate_edit_tab_shipmentdesign</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">quotedesign_section</argument>
                    <argument name="block" xsi:type="string">pdftemplate_edit_tab_quotedesign</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
