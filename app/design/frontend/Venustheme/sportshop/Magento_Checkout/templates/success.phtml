$price = number_format((float)$order->getGrandTotal(), 2, '.', '');
$itemdata = array();
//Loop through each item and fetch data
foreach ($order->getAllItems() as $item)
{
	if($item->getProductType() != 'simple'){
	  $itemmain = array();
	  $price_item =  number_format((float)$item->getPrice(), 2, '.', '');
	  $itemmain['productname'] = $item->getName();
	  $itemmain['productid'] = $item->getId();
	  $itemmain['quantity'] = $item->getQtyOrdered();
	  $itemmain['price'] = $price_item;
	  array_push($itemdata, $itemmain);
	} 
}
$jsonarray = json_encode($itemdata);
