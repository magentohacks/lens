<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route url="/V1/barclaycardcw/transactions/:id" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::transactions" />
        </resources>
    </route>
    <route url="/V1/barclaycardcw/transactions/payment-id/:id" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionRepositoryInterface" method="getByPaymentId"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::transactions" />
        </resources>
    </route>
    <route url="/V1/barclaycardcw/transactions/order-id/:id" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionRepositoryInterface" method="getByOrderId"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::transactions" />
        </resources>
    </route>
    <route url="/V1/barclaycardcw/transactions/:id" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::transactions" />
        </resources>
    </route>
    <route url="/V1/barclaycardcw/transactions" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::transactions" />
        </resources>
    </route>
    <route url="/V1/barclaycardcw/transactions/:id/status" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionManagementInterface" method="getStatus"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::transactions" />
        </resources>
    </route>
    <route url="/V1/barclaycardcw/transactions/:id/update" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionManagementInterface" method="update"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::transactions" />
        </resources>
    </route>
    <route url="/V1/barclaycardcw/transactions/:id/delete-alias" method="GET">
        <service class="Customweb\BarclaycardCw\Api\TransactionManagementInterface" method="deleteAlias"/>
        <resources>
            <resource ref="Customweb_BarclaycardCw::customer_aliases" />
        </resources>
    </route>
    
    <route url="/V1/guest-carts/:cartId/barclaycardcw/checkout/authorize" method="POST">
        <service class="Customweb\BarclaycardCw\Api\CheckoutManagementInterface" method="authorize"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/carts/mine/barclaycardcw/checkout/authorize" method="POST">
        <service class="Customweb\BarclaycardCw\Api\CheckoutManagementInterface" method="authorize"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>
    <route url="/V1/guest-carts/:cartId/barclaycardcw/checkout/payment-form/:paymentMethod" method="GET">
        <service class="Customweb\BarclaycardCw\Api\CheckoutManagementInterface" method="getGuestPaymentForm"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/carts/mine/barclaycardcw/checkout/payment-form/:paymentMethod" method="GET">
        <service class="Customweb\BarclaycardCw\Api\CheckoutManagementInterface" method="getPaymentForm"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/guest-carts/:cartId/barclaycardcw/checkout/payment-form/:paymentMethod/:alias" method="GET">
        <service class="Customweb\BarclaycardCw\Api\CheckoutManagementInterface" method="getGuestPaymentForm"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/carts/mine/barclaycardcw/checkout/payment-form/:paymentMethod/:alias" method="GET">
        <service class="Customweb\BarclaycardCw\Api\CheckoutManagementInterface" method="getPaymentForm"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>